  <script>
    const music = document.getElementById("bg-music");
    const button = document.querySelector(".music-toggle");
    let playing = false;

    function toggleMusic() {
      if (playing) {
        music.pause();
        button.textContent = "üéµ Ligar M√∫sica";
      } else {
        music.play();
        button.textContent = "üîá Desligar M√∫sica";
      }
      playing = !playing;
    }
  </script>
